{
  "name": "backport-action",
  "version": "0.0.8-SNAPSHOT",
  "private": true,
  "description": "GitHub action to automatically backport pull requests",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**.ts\"",
    "format-check": "prettier --check \"**.ts\"",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --silent",
    "test-verbose": "jest",
    "all": "npm run format && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeebe-io/backport-action.git"
  },
  "keywords": [
    "actions",
    "backport"
  ],
  "author": "zeebe-io",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@types/dedent": "^0.7.0",
    "dedent": "^0.7.0",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^4.15.0",
    "@types/jest": "^27.0.3",
    "@vercel/ncc": "^0.31.1",
    "jest": "^27.4.5",
    "prettier": "2.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
